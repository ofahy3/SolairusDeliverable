# Solairus Intelligence - Environment Variables
# Copy this file to .env and fill in your actual credentials

# ErgoMind API Configuration
ERGOMIND_BASE_URL=https://bl373-ergo-api.toolbox.bluelabellabs.io
ERGOMIND_WS_URL=wss://bl373-ergo-api.toolbox.bluelabellabs.io/ws/chat
ERGOMIND_API_KEY=your_api_key_here
ERGOMIND_USER_ID=your_user_id_here

# Global Trade Alert (GTA) API Configuration
GTA_BASE_URL=https://api.globaltradealert.org/api/v1/data/
GTA_API_KEY=your_gta_api_key_here

# Federal Reserve Economic Data (FRED) API Configuration
# Get a free API key from: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# AI Content Generation (Claude API)
# Get API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AI_ENABLED=true
AI_MODEL=claude-opus-4-5-20251101

# Optional: Output Directory Override
# OUTPUT_DIR=/custom/path/to/outputs
